{% extends 'base.html.twig' %}

{% block title %}Log In - RankedChoice{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="page-content pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-details page-login mt-4">
                        <h1 class="h3 mb-3 font-weight-normal title-gradient-1">
                            Please Sign In
                        </h1>

                        <form id="form" action="{{ path('login') }}" method="post">
                            <input type="hidden" name="_target_path" value="/post/"/>
                            <div class="form-group">
                                <label for="username" class="col-sm-2 col-form-label">Email address</label>
                                <input type="email" value="{{ last_username }}" class="form-control" id="username" name="_username" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="_password" required>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="rememberMe" name="_remember_me">
                                    <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-footer-buttons">
                                <button type="submit" class="btn btn-success">
                                    <span>LOG IN</span>
                                </button>
                                <a href="#" class="btn btn-success">
                                    <i class="fas fa-user"></i>
                                    <span>Create an account</span>
                                </a>
                                <a href="{{ path('connect_google_start') }}" class="btn btn-success">
                                    <i class="fas fa-user"></i>
                                    <span>Google auth</span>
                                </a>
                            </div>

                            <div class="form-additional mt-2 pt-1">
                                <div class="row">
                                    <div class="col-sm-12 text-center">
                                        <a href="{{ path('app_forgot_password_request') }}">
                                            Or reset your password
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
