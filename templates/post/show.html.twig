{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ post.body }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('post_index') }}"><button type="button" class="btn btn-primary">Back</button></a>

    {%  if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id == post.user.id %}
        <a href="{{ path('post_edit', {'id': post.id}) }}"><button type="button" class="btn btn-primary">Edit</button></a>
        <a href="{{ path('post_delete', {'id': post.id}) }}"><button type="button" class="btn btn-primary">Delete</button></a>
    {% endif %}

{#    {{ include('post/_delete_form.html.twig') }}#}
{% endblock %}

